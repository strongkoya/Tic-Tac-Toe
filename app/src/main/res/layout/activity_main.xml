<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#343e56">
    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="#AA3D3D"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="RESET"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_reset"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:shadowRadius="@integer/material_motion_duration_long_2" />

    <com.example.tic_tac_toe.GrilleJeuCustomView
        android:id="@+id/grilleJeu"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="30dp"/>



    <LinearLayout
        android:id="@+id/LLScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player X: 0"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player O: 0"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </LinearLayout>






</LinearLayout>